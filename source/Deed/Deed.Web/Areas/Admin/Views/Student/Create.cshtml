@model Deed.Data.Objects.Student

@{
    ViewBag.Title = "Log in";
}
@*@Html.Partial("_pages")*@
<div class="container contents single login-register" style="margin-top:3px">
    <div class="row">
        <div class="span12 main-wrap">
            <section id="loginForm">
                <h3><span>New Student</span></h3>
                <div class="main">
                    <div class="inner-wrapper">
                        @using (Html.BeginForm("Create", "Student", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "container contents single login-register", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            <div class="form-group">
                                @Html.LabelFor(m => m.Name)
                                <div>
                                    @Html.TextBoxFor(m => m.Name)
                                    @Html.ValidationMessageFor(m => m. Name)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Father)
                                <div>
                                    @Html.TextBoxFor(m => m.Father)
                                    @Html.ValidationMessageFor(m => m.Father)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Mother)
                                <div>
                                    @Html.TextBoxFor(m => m.Mother)
                                    @Html.ValidationMessageFor(m => m.Mother)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Class)
                                <div>
                                    @Html.DropDownList("Class","Select Class")
                                </div>
                            </div>
                            
                            <div class="form-group">
                                @Html.LabelFor(m => m.Birthday)
                                <div>
                                    @Html.TextBoxFor(m => m.Birthday, new {@type = "date" })
                                    @Html.ValidationMessageFor(m => m.Father)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Address)
                                <div>
                                    @Html.TextBoxFor(m => m.Address)
                                    @Html.ValidationMessageFor(m => m.Address)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Religion)
                                <div>
                                    @Html.DropDownList("Religion", "Select Religion")
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Caste)
                                <div>
                                    @Html.DropDownList("Caste", "Select Caste")
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Village)
                                <div>
                                    @Html.TextBoxFor(m => m.Village)
                                    @Html.ValidationMessageFor(m => m.Village)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.District)
                                <div>
                                    @Html.TextBoxFor(m => m.District)
                                    @Html.ValidationMessageFor(m => m.District)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.PostOffice)
                                <div>
                                    @Html.TextBoxFor(m => m.PostOffice)
                                    @Html.ValidationMessageFor(m => m.PostOffice)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.PuliceStation)
                                <div>
                                    @Html.TextBoxFor(m => m.PuliceStation)
                                    @Html.ValidationMessageFor(m => m.PostOffice)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.City.Name)
                                <div>
                                    @Html.TextBoxFor(m => m.City.Name)
                                    @Html.ValidationMessageFor(m => m.City.Name)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.State.Name)
                                <div>
                                    @Html.TextBoxFor(m => m.State.Name)
                                    @Html.ValidationMessageFor(m => m.State.Name)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Country)
                                <div>
                                    @Html.DropDownList("Country", "Select Country")
                                </div>
                            </div>
                            <div class="form-group">
                                <div>
                                    <input type="submit" value="Log in" class="real-btn save-btn" />
                                </div>
                            </div>
                            <p>
                                @Html.ActionLink("Register", "Register") if you don't have a local account.
                            </p>
                        }
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
