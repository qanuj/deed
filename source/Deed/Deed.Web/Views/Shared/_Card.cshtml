@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Deed.Web.ViewModels.CardViewModel>
<div class="property-items">
    <div class="narrative">
        <h2>Deed A Day</h2><p>Your Deed A Day,Your Community,Your Impact.</p>
    </div>
    <div class="property-items-container clearfix">
        @foreach(var m in Model) {
            <div class="span6" style="margin-top:5px">
                <article class="property-item clearfix">
                    <h4>
                        <a href="@Url.Action("Details", "Search", new {id = m.ID })" title="15421 Southwest 39th Terrace">

                        </a>
                    </h4>
                    <figure>
                        <a href="@Url.Action("Details", "Search", new {id = m.ID })" title="@m.Name">
                            <img width="244" height="163" src="http://deedaday.in/img/upload/students/@m.Picture"
                                 class="attachment-property-thumb-image wp-post-image" alt="@m.Name" title="@m.Name">
                        </a>
                    </figure>
                    <div class="detail" style="max-height:115px;overflow: hidden;overflow-style: ">
                        <h5 class="price">@m.Name</h5>
                        <p>@m.FamilyHistory</p>
                        <a class="more-details" href="@Url.Action("Details", "Pledge", new { id=@m.ID})">More Details <i class="fa fa-caret-right"></i></a>
                    </div>
                    <div class="property-meta">
                        <span><b>Father:</b></span>
                        <span>@m.Father</span>
                        <span><b>Mother:</b></span>
                        <span>@m.Mother</span>
                        <span><b>Fees:</b></span>
                        <span>£ @(m.YearlyFee/12)</span>
                    </div>
                </article>
            </div>
        }
    </div>
    <div class="pagination">
        @Html.PagedListPager(Model, page => Url.Action("Index", "Home", new { page = page }), PagedListRenderOptions.ClassicPlusFirstAndLast)
    </div>
</div>