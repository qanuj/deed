@{
    ViewBag.Title = "Part Sponsor";
}
<div class="page-head" style="background-repeat: no-repeat; background-position: center top; background-image: url('/Content/images/SliderImg/13772.jpg'); background-size: cover; ">
    <div class="container">
        <div class="wrap clearfix">
            <h1 class="page-title"><span>Part Sponsor</span></h1>
            <p></p>
        </div>
    </div>
</div>
<div class="container contents lisitng-grid-layout">
    <div class="row">
        <div class="span9 main-wrap">
            <div class="main">
                <section id="sec" class="listing-layout">
                    <h3 class="title-heading">Part Sponsor</h3>
                    <div class="view-type clearfix">
                        <a id="list" class="btn btn-default btn-sm">
                            <span class="glyphicon glyphicon-th-list">
                            </span>
                        </a> <a id="grid" class="btn btn-default btn-sm">
                            <span class="glyphicon glyphicon-th"></span>
                        </a>
                    </div>
                    <div id="partSponserList" class="list-container clearfix" data-bind="foreach:items">
                        <div class="span6" id="articleparent">
                            <article class="property-item clearfix">
                                <h4><a href="@Url.Action("Details", "Search", new {id = 0 })" data-bind="text:Name,title:Name"></a></h4>
                                <figure>
                                    <a href="@Url.Action("Details", "Search", new {id = 0 })" data-bind="title:Name">
                                        <img width="244" height="163" data-bind="attr:{src:'http://deedaday.in/img/upload/students/'+Picture,alt:Name},title:Name"
                                             class="attachment-property-thumb-image wp-post-image">
                                    </a>
                                </figure>
                                <div class="detail" id="divstudent">
                                    <h5 class="price">&#163; <span data-bind="text:Fee"></span> Per Year</h5>
                                    <p data-bind="text:History"></p>
                                    <a class="more-details" href="@Url.Action("Details", "Pledge", new { id=0})">More Details <i class="fa fa-caret-right"></i></a>
                                    <button class="btn btn-xs btn-danger pull-right">Select</button>
                                    <div class="progress"> <div class="progress-bar" role="progressbar"></div></div>
                                </div>
                                <div class="property-meta">
                                    <span><b>Father:</b></span>
                                    <span data-bind="text:Father"></span>
                                    <span><b>Mother:</b></span>
                                    <span data-bind="text:Mother"></span>
                                </div>
                            </article>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        var partSponserViewModel = {
            items: ko.observableArray([])
        };
        $.ajax({
            type: "POST",
            url: '/projects/get',
            contentType: 'application/json; charset=utf-8',
            success: function (d) {
                for (var x in d) {
                    partSponserViewModel.items.push(d[x]);
                }
            }
        });
        ko.applyBindings(partSponserViewModel,document.getElementById("partSponserList"));
    });
</script>